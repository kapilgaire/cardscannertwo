<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.scan.CardScannerActivity"
    tools:showIn="@layout/activity_scan">

    <ImageView
        android:id="@+id/vahanurja_iv"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/honda_icon"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/card_info_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vahanurja_iv"
        android:fontFamily="@string/font_family_condensed"
        android:text="@string/label_by"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/honda_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_info_tv"
        android:fontFamily="@string/font_family_condensed"
        android:text="HONDA"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="48sp"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/sec_line_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/honda_tv"
        android:fontFamily="@string/font_family_condensed"
        android:text="The Power of Dreams"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold"

        />
    <FrameLayout
        android:layout_below="@id/sec_line_tv"
        android:id="@+id/cover_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/gif_home_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:textColor="#FFFFFF" />
        </RelativeLayout>
    </FrameLayout>

    <Button
        android:id="@+id/report_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="4dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@string/font_family_condensed"
        android:padding="12dp"
        android:text="@string/label_day_wise_report"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/no_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cover_fl"
        android:layout_centerInParent="true"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold" />

</RelativeLayout>